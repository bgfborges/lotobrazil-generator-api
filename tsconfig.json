{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "typeRoots": [
      "./node_modules",
      "./src/@types"
    ],                                  
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true                                 
  }
}
